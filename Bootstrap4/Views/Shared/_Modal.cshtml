@model Bootstrap4.Models.ModalModel

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <span class="modal-history">
                <span class="btn-group btn-group-sm">
                    <button id="modal_back" class="btn btn-sm" onclick="App.Modal.Back()"><i class="fa fa-caret-left"></i></button>
                    <button id="modal_fwd" class="btn btn-sm" onclick="App.Modal.Forward()"><i class="fa fa-caret-right"></i></button>
                </span>
            </span>
            <h5 class="modal-title">
                @Model.Title
            </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            @RenderBody()
        </div>
        <div class="modal-footer">
            @if (Model.EnableSave)
            {
                <button type="button" class="btn btn-primary">@Model.SaveText</button>
            }
            @if (!Model.DisableClose)
            {
                <button type="button" class="btn btn-secondary" data-dismiss="modal">@Model.CloseText</button>
            }
        </div>
    </div>
</div>